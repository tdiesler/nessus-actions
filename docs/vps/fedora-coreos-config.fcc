variant: fcos
version: 1.1.0
passwd:
  users:
    - name: core
      ssh_authorized_keys:
        - "ssh-rsa AAAAB3N... yourname@redhat.com"
      groups: [ sudo, docker ]
storage:
  trees:
    - local: tls
      path: /var/home/core/tls
  files:
    - path: /var/home/core/keycloak/myrealm.json
      contents:
        source: https://raw.githubusercontent.com/tdiesler/nessus-actions/master/docs/myrealm.json
      mode: 0644
