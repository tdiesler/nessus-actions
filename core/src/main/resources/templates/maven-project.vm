<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>$project.groupId</groupId>
    <artifactId>$project.artifactId</artifactId>
    <version>$project.version</version>

    <name>$project.name</name>

    <properties>
        <version.camel.quarkus>1.3.0</version.camel.quarkus>
        <version.fasterxml.jackson>2.11.0</version.fasterxml.jackson>
        <version.io.nessus.actions>1.0.0-SNAPSHOT</version.io.nessus.actions>
        <version.io.nessus.common>1.1.0</version.io.nessus.common>
        <version.io.quarkus>1.9.0.Final</version.io.quarkus>
        <version.slf4j>1.7.28</version.slf4j>
        
        <!-- Plugin versions -->
        <version-maven-compiler-plugin>3.8.0</version-maven-compiler-plugin>
        <version-maven-jar-plugin>3.2.0</version-maven-jar-plugin>
    </properties>
    
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.apache.camel.quarkus</groupId>
                <artifactId>camel-quarkus-bom</artifactId>
                <version>${version.camel.quarkus}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>io.nessus</groupId>
            <artifactId>nessus-common-core</artifactId>
            <version>${version.io.nessus.common}</version>
        </dependency>
        <dependency>
            <groupId>io.nessus.actions</groupId>
            <artifactId>nessus-actions-core</artifactId>
            <version>${version.io.nessus.actions}</version>
            <scope>system</scope>
            <systemPath>${basedir}/lib/nessus-actions-core-${version.io.nessus.actions}.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-yaml</artifactId>
            <version>${version.fasterxml.jackson}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-main</artifactId>
            <version>${version.camel.quarkus}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-platform-http</artifactId>
            <version>${version.camel.quarkus}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-jackson</artifactId>
            <version>${version.camel.quarkus}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${version.slf4j}</version>
        </dependency>
#foreach( $dep in $project.dependencies )
        <dependency>
            <groupId>$dep.groupId</groupId>
            <artifactId>$dep.artifactId</artifactId>
#if( $dep.groupId == 'org.apache.camel.quarkus' )
            <version>${version.camel.quarkus}</version>
#else
            <version>$dep.version</version>
#end
#if( $dep.scope )
            <scope>$dep.scope</scope>
#end
        </dependency>
#end
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>io.quarkus</groupId>
                    <artifactId>quarkus-maven-plugin</artifactId>
                    <version>${version.io.quarkus}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${version-maven-compiler-plugin}</version>
                    <configuration>
                        <showDeprecation>true</showDeprecation>
                        <showWarnings>true</showWarnings>
                        <source>1.8</source>
                        <target>1.8</target>
                        <compilerArgs>
                            <arg>-Xlint:unchecked</arg>
                        </compilerArgs>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        
        <plugins>
            <plugin>
                <groupId>io.quarkus</groupId>
                <artifactId>quarkus-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>build</id>
                        <goals>
                            <goal>build</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>central</id>
            <name>Central Repository</name>
            <url>https://repo.maven.apache.org/maven2</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
        <repository>
            <id>jboss-public-repository</id>
            <url>https://repository.jboss.org/nexus/content/groups/public</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
</project>
